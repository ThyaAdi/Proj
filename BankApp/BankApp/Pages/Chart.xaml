<UserControl x:Class="BankApp.Chart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pie="clr-namespace:PieControls;assembly=PieControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">
    <Grid>
        <StackPanel>
            <TextBox Height="23" Name="textBox1" Width="120" />
            <pie:PieChart x:Name="TransactionChart" PieWidth="200" PieHeight="200" HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Margin="0,100,0,0" />
            <TextBox Height="23" Name="BankAccountId" Width="120" Visibility="Collapsed"/>
        </StackPanel>
        <Frame Height="48" HorizontalAlignment="Left" Margin="0" Name="frame1" VerticalAlignment="Top" Width="400" BorderThickness="0,0,0,2" Background="#FF1F70F2" />
        <Button Content="Logout" Height="23" HorizontalAlignment="Right" Margin="0,12,8,0" Name="button2" VerticalAlignment="Top" Width="75" FontWeight="Bold" Click="Logoutbutton_Click"/>
        <Button Content="Back" Height="23" HorizontalAlignment="Left" Margin="9,12,0,0" Name="button1" VerticalAlignment="Top" Width="75" FontWeight="Bold" Click="Backbutton_Click"/>
        
    </Grid>
</UserControl>
